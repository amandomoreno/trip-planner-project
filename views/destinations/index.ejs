<%- include('../partials/header') %>

<h1><%= title %></h1>

<% destinations.forEach(function(d){ %>
  <div class="card" style="width: 36rem;">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <!-- this is the tab header for placeInfo -->
      <li class="nav-item">
        <a class="nav-link active" id="placeinfo-tab" data-toggle="tab" href="#placeinfo" role="tab"
          aria-controls="placeinfo" aria-selected="true">Place Info</a>
      </li>
      <!-- This is the tab header for reviews -->
      <li class="nav-item">
        <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews"
          aria-selected="false">Reviews</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
  
      <!-- This is the tab that holds the review info for a place -->
      <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
        <form action="/destinations/reviews" method="POST">
          <div class="form-group">
            <textarea class="form-control" name="content" style="width: 18rem;" id="exampleFormControlTextarea1"
              placeholder="Leave a Review" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Rating</label>
          </div>
          <input type="text" hidden name="reviewer" value="<%= user.name %>">
          <input type="text" hidden name="reviewerPhoto" value="<%= user.avatar %>">
        </form>
      </div>


      
    </div>


<div class="card mb-3">
  <!-- <img src="..." class="card-img-top" alt="..."> -->
  <div class="card-body">
    <h5 class="card-title"><%= d.place %></h5>
    <h6 class="card-title">Description</h6>
    <p class="card-text"><%= d.description %></p>
  </div>
  <% if(user._id == d.createdBy) {%>
  <form action="/destinations/<%= d.id %>?_method=DELETE" class="delete-form" method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
  <% } %>
  <td><a id="details" href="/destinations/<%= d._id %>">Details</a></td>
</div>
<% }) %>










  <%- include('../partials/footer') %>